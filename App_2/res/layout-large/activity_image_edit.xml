<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <fragment class="com.example.app_2.fragments.ImageListFragment"
            android:id="@+id/titles" android:layout_weight="2"
            android:background="#ff000000"
            android:layout_width="0px" android:layout_height="match_parent" />

    <FrameLayout android:id="@+id/details" android:layout_weight="4"
            android:layout_width="0px" android:layout_height="match_parent"/>
    
    <FrameLayout android:id="@+id/parent_select" android:layout_weight="1"
            android:layout_width="0px" android:layout_height="match_parent"
            android:background="#ff000000"/>

</LinearLayout>