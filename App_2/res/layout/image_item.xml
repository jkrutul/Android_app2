<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <com.example.app_2.views.RecyclingImageView
        android:id="@+id/recycling_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"/>
    
      <TextView
        android:id="@+id/image_desc"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@id/recycling_image"
	    android:layout_alignRight="@id/recycling_image"
	    android:layout_alignBottom="@id/recycling_image"
        android:gravity="bottom|center_horizontal"
        android:textSize="12sp"
        android:background="#50000000"
        android:textColor="#fff" />

</RelativeLayout>
