<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffc28ece" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp" >

        <Button
            android:id="@+id/grid_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="goto Image Grid Activity" />

        <Button
            android:id="@+id/db_test_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grid_activity"
            android:onClick="onClick"
            android:text="Test DB" />

        <Button
            android:id="@+id/client_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/db_test_activity"
            android:onClick="onClick"
            android:text="send message to computer" />

        <Button
            android:id="@+id/image_overview_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/client_activity"
            android:layout_alignParentBottom="true"
            android:onClick="onClick"
            android:text="image Overview" />

    </RelativeLayout>

</ScrollView>